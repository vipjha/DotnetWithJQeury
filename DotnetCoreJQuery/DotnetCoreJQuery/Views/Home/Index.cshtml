function fnCalculate() {
    var x = parseInt($("#txtVal1").val());
    var y = parseInt($("#txtVal2").val());

    $.ajax({
        type: "POST",
        url: "@Url.Action("CalculateNumber","Home")",
        data:{num1:x,num2:y},
        dataType:"json",
        success: function(result) {
            //console.log(msg);
            //alert(msg);

            var msg = "SUM: " + result.add + 
            "<br>SUB: " + result.substract  + "<br>MUL: " + result.multiple + "<br>DIV: " + result.division

            $("#divResult").html(msg);
        },
        error: function(req, status, error) {
            $("#divResult").html(error);
        }
    })
    //alert(x + y);
}


function fnSum() {
    var x = parseInt($("#txtVal1").val());
    var y = parseInt($("#txtVal2").val());

    $.ajax({
        type:"POST",
        url:"@Url.Action("Add","Home")",
        data: {num1:x, num2:y},
        dataType: "text",

        success: function(msg) {
            //console.log(msg);
            //alert(msg);
            $("#divResult").text(msg);
        },
        error: function(req, status, error) {

        }
    })
}

function fnSub() {
    var x = parseInt($("#txtVal1").val());
    var y = parseInt($("#txtVal2").val());

    $.ajax({
        type: "POST",
        url: "@Url.Action("Sub","Home")",
        data: { num1: x, num2: y },
        dataType: "text",

        success: function(msg) {
            
            $("#divResult").text(msg);
        },
        error: function(req, status, error) {

        }
    })

}
function fnMul() {
    var x = parseInt($("#txtVal1").val());
    var y = parseInt($("#txtVal2").val());

    $.ajax({
        type: "POST",
        url: "@Url.Action("Mul","Home")",
        data: { num1: x, num2: y },
        dataType: "text",

        success: function(msg) {
           
            $("#divResult").text(msg);
        },
        error: function(req, status, error) {

        }
    })

}
